<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN"
	"http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>Label</key>
		<string>com.davidanema.toggleLocation</string>
		<key>ProgramArguments</key>
		<array>
			<string>/Users/[username]/Scripts/toggleLocation.sh</string> <!-- Change [username] to match yours -->
		</array>
		<key>WatchPaths</key>
		<array>
			<string>/Library/Preferences/SystemConfiguration</string>
		</array>
	</dict>
</plist>